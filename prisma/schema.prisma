// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   @default("https://res.cloudinary.com/dqo2aggjs/image/upload/v1696596420/default-avatar_kqqse2.jpg")
  userRole      UserRole  @default(User)
  basket        Basket?
}

model Basket {
  id          String       @id @default(cuid())
  userId      String       @unique
  basketItems BasketItem[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BasketItem {
  id         Int     @id @default(autoincrement())
  product    Product @relation(fields: [productId], references: [id])
  productId  Int
  quantity   Int
  totalPrice Float
  basketId   String
  basket     Basket  @relation(fields: [basketId], references: [id], onDelete: Cascade)

  // Add other fields if needed
}

enum UserRole {
  Owner
  Admin
  Merchandiser
  User
  Guest
}

enum ProductCategory {
  ELECTRONICS
  CLOTHING
  FOOD
  BEAUTY
}

model Product {
  id          Int             @id @default(autoincrement())
  name        String
  description String?
  price       Decimal
  quantity    Int
  image       String
  total       Decimal
  category    ProductCategory // Add this field to associate products with a category

  BasketItem BasketItem[]
}
